<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwzFICznWaTiSDezTgXy9TNj0amM9oWaM&callback=initMap"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> 
<div class="map-div">
  <div id="multi_markers"></div>
</div>
<script type="text/javascript">
	var handler = Gmaps.build('Google');
	handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
	  var markers = handler.addMarkers(<%=raw @lat_lng.to_json %>);
	  handler.bounds.extendWith(markers);
	  handler.fitMapToBounds();
	});
</script>